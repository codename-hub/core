<phpunit bootstrap="tests/autoload.php">
  <testsuites>
    <testsuite name="All Tests">
      <directory suffix=".php">tests</directory>
    </testsuite>
  </testsuites>
  <filter>
    <whitelist processUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">backend/class/</directory>
    </whitelist>
  </filter>
</phpunit>