{
  "name": "codename/core",
  "description": "This is THE core framework.",
  "type": "library",
  "keywords": [
    "codename",
    "core",
    "framework"
  ],
  "authors": [
    {
      "name": "Kevin Dargel",
      "role": "Software Developer"
    }
  ],
  "suggest": {
    "phpmailer/phpmailer": "for using the respective mail client",
    "aws/aws-sdk-php": "For using S3 buckets"
  },
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "aws/aws-sdk-php": "3.*",
    "codename/core-test": "*",
    "friendsofphp/php-cs-fixer": "^3.15",
    "guzzlehttp/guzzle": "^7.0",
    "mikey179/vfsstream": "^1.6",
    "phpmailer/phpmailer": "^6.0",
    "phpunit/phpunit": "^10.0",
    "vimeo/psalm": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "codename\\core\\": "backend/class/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "codename\\core\\tests\\": "tests/"
    }
  }
}
